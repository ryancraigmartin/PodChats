                        <div class="card-header rendered-podcasts">
                           <h5 class="podcast-title-card-text">{{this.title}}</h5>
                        </div>
                        <div class="card-body rendered-podcasts">
                                <img src="{{this.imageUrl}}" alt="">
                                <span class="this-page-published-date" src="{{this.publishedDate}}"></span>
                                <span>{{this.description}}</span>
                                <button class="btn btn-info"><a href="/review/new/{{this._id}}">Write a Review</a></button>
                            </a>
                        </div>
                    </div>
                </div>
        {{/each}} 
            </div>
        </div>
</div>


